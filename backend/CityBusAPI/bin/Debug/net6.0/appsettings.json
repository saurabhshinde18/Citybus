{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=CityBusAudioDB;User Id=root;Password=your_mysql_password;"
  },
  "Jwt": {
    "Key": "your-super-secret-jwt-key-must-be-at-least-32-characters-long",
    "Issuer": "CityBusAPI",
    "Audience": "CityBusClient",
    "ExpirationMinutes": 480
  },
  "FileStorage": {
    "MaxFileSize": 52428800,
    "AllowedExtensions": [".mp3", ".wav"],
    "UploadPath": "wwwroot/uploads/audio"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://127.0.0.1:3000"
    ]
  },
  "AllowedHosts": "*"
}
